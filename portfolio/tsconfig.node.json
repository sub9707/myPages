{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "es2022",
    "lib": ["es2023"],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist/node/types", // 타입 정의 파일 출력 디렉토리
    "outDir": "./dist/node",               // 출력 디렉토리
    "rootDir": "./src"                     // 소스 파일 위치
  },
  "include": ["vite.config.ts", "svg.d.ts"],
  "exclude": ["node_modules", "dist"]
}
