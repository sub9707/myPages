{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,             // CommonJS와 ES 모듈 간 호환성 활성화
    "allowSyntheticDefaultImports": true, // 기본 가져오기 허용
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src", "svg.d.ts", "**/*.svg?react"],
  "exclude": ["node_modules", "dist"]
}
