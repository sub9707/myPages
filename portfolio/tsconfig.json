{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,               // 타입 정의 파일 생성
    "declarationDir": "./dist/types",  // 타입 정의 파일 출력 디렉토리
    "outDir": "./dist",                // 빌드 결과물 출력 디렉토리
    "rootDir": "./src"                 // 소스 파일 루트 경로
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
